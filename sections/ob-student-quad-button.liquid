<div class="grid grid-cols-2 relative" style="height:400px;">
  <div style="position:absolute; width:100%; height:100%; z-index:-1;" class="lg:block max-lg:hidden student-image">
    <img src="{{ section.settings.desktop_image | image_url }}" />
  </div>
  <div style="position:absolute; width:100%; height:100%; z-index:-1;" class="max-lg:block lg:hidden student-image">
   <img src="{{ section.settings.mobile_image | image_url }}"  />
  </div>
  <div class="max-lg:col-span-2 my-12 flex flex-col justify-center">
    <div class="px-12">
      
      <div class="w-full mb-4 lg:mb-12">
        <div class="w-full font-bold marujo w-full text-center text-4xl lg:text-5xl text-white">{{ section.settings.title_text }}</div>
        <div class="w-full marujo w-full text-center text-4xl lg:text-5xl text-white">{{ section.settings.subtitle_text }}</div>
      </div>
      
  
      <div class="grid lg:grid-cols-2 gap-4 marujo font-bold text-lg">
          <a href="{{ section.settings.button_1_link }}">
            <div>
              <div class="px-4 py-1 w-full whitespace-nowrap text-center top-button relative shadow-xl" 
                   style="--btn-color: #6523e3; background-color: var(--btn-color); color: white;">
                  {{ section.settings.button_1_top_text }}
              </div>
            <div class="px-4 py-1 w-full whitespace-nowrap text-center shadow-xl" style="background-color: white;">{{ section.settings.button_1_bottom_text }}</div>
          </div>
        </a>
        <div>
           <a href="{{ section.settings.button_2_link }}">
            <div class="px-4 py-1 w-full whitespace-nowrap text-center top-button relative shadow-xl" 
                 style="--btn-color: #8cffaa; background-color: var(--btn-color); color: white;">
                {{ section.settings.button_2_top_text }}
            </div>
            <div class="px-4 py-1 w-full whitespace-nowrap text-center shadow-xl" style="background-color: white;">{{ section.settings.button_2_bottom_text }}</div>
           </a>
        </div>
      </div>
    </div>
  </div>

  
</div>
<style>
  .top-button::after {
    content: "";
    position: absolute;
    bottom: 0px; 
    left: 50%;
    transform: translate(-50%, 100%);
    border-width: 10px;
    border-style: solid;
   border-color: var(--btn-color) transparent transparent transparent; 
}
  .top-button{
    margin-bottom: 5px;
    z-index: 1;
  }
  
  .student-image img{
    width:100%;
    height:100%;
    object-fit: cover;
  }
</style>

