{% assign section_settings = section.settings %}
{% assign blocks = section.blocks %}
<div class="careers-wrapper mx-auto text-gray-900 font-normal">
<div class="px-[12px] md:px-[36px] xl:px-3 mt-[50px] lg:mt-[70px]">
  <div class="lg:grid lg:grid-cols-2 lg:gap-[30px] xl:gap-[95px]">
    <div class="relative">
      {% if section_settings.image %}
        <img class="rounded-2xl mb-[30px] lg:mb-0 lg:flex-1 w-full h-full min-h-[300px] object-cover border-2 border-solid shadow-xl" src="{{ section_settings.image | img_url: 'master' }}">
      {% endif %}
    </div>
    <div class="flex-1 order-1">
      {% if section_settings.subheading %}
      <span class="inline-block text-orange-900 py-[14px] px-[28px] rounded-[50px] text-[14px] leading-[14px] mb-[22px] border-2 border-solid" style="background-color: {{ section_settings.bgColor }};">{{ section_settings.subheading }}</span>
      {% endif %}
      <h3 class="font-bold lg:text-heading-1 md:text-[46px] md:leading-[52px] text-[35px] leading-[44px] mb-[22px]">{{ section_settings.heading }}</h3>
      <p class="text-quote md:text-lead-lg text-gray-600 mb-[50px]">{{ section_settings.text }}</p>
      {% if blocks.size > 0 %}
      <div class="border border-green-900 border-dashed mb-[48px]"></div>
      {% endif %}
      <div class="md:grid md:grid-cols-2 md:gap-y-[34px] lg:gap-x-[70px]">
        {% for block in blocks %}
          {%- comment %}<locksmith:454b>{% endcomment -%}
            {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: block, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
          {%- comment %}</locksmith:454b>{% endcomment -%}
          <div class="mb-[30px] lg:mb-0">
            <div class="flex items-center mb-[17px]">
              {% if block.settings.icon %}
                <div class="icon-wrap w-5 h-5 mr-[9px]">{{ block.settings.icon }}</div>
              {% endif %}
              <h4 class="text-heading-6 font-bold">{{ block.settings.title }}</h4>
            </div>
            <p class="text-excerpt text-gray-600">{{ block.settings.text }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
</div>
{% schema %}
  {
    "name": "Charity",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "color",
        "id": "bgColor",
        "label": "Subheading Background"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      }
    ],
  "blocks": [
    {
      "type" : "block",
      "name": "Block",
       "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "Icon SVG"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ] 
    }
  ]
}
{% endschema %}