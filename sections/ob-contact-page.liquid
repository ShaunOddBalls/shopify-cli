<div class="{{ section.settings.outer_wrapper_classes }}">
  <div class="{{ section.settings.inner_wrapper_classes }}">
    <h1 class="text-3xl md:text-4xl pb-2 font-bebas mx-4 md:mx-0">{% if section.settings.page_title != blank %}{{ section.settings.page_title }}{% else %}{{ page.title }}{% endif %}</h1>
    {% if section.settings.announcement != blank %}
    <div class="{{ section.settings.announcement_classes }}">
      {{ section.settings.announcement }}
    </div>
    {% endif %}    
    <div class="{{ section.settings.main_card_wrapper_classes }}">
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <!-- Contact information --> 
        <div class="relative overflow-hidden py-10 px-6 bg-magenta-100 sm:px-8 border-t-2 lg:border-t-0 border-solid">
          <div class="absolute inset-0">
            	<img class="h-full w-full object-cover hidden md:block" src="{{ section.settings.desktop_map | img_url: "1000x" }}">
            	<img class="h-full w-full object-cover md:hidden"src="{{ section.settings.mobile_map | img_url: "1000x" }}">            
          </div>
          <div class="relative max-w-sm shadow-md mb-20 sm:mb-28 md:mb-32 lg:mb-0 border-2 border-solid rounded-md overflow-hidden" style="backdrop-filter: blur(1rem);">
              <div class="py-5 px-8 border-b-2 border-solid" style="background: rgba(255,255,255,0.6);">
                	<h3 class="text-lg font-medium text-gray-700">{{ section.settings.company_name }}</h3>
                	<p class="text-sm text-gray-700 max-w-3xl">{{ section.settings.company_address }}</p>
                	<a class="text-sm text-magenta-500 {{ section.settings.directions_classes }}" href="{{ section.settings.directions_link }}">{{ section.settings.directions_text }}</a>
              </div>
              {% if section.settings.display_hours %} 
              <div class="grid grid-cols-2 py-5 px-8 text-sm border-t border-black border-opacity-5" style="background: rgba(255,255,255,0.4);">
                  <span class="col-span-2 pb-2 font-semibold">OddBalls Opening Times</span>
                  <span class="col-span-2 pb-2 font-semibold text-xs">All times in UTC</span>
                  <span class="border-gray-300 border-r text-left">Monday</span><span class="text-right">{{ section.settings.monday_opening }}</span>
                  <span class="border-gray-300 border-r text-left">Tuesday</span><span class="text-right">{{ section.settings.tuesday_opening }}</span>
                  <span class="border-gray-300 border-r text-left">Wednesday</span><span class="text-right">{{ section.settings.wednesday_opening }}</span>
                  <span class="border-gray-300 border-r text-left">Thursday</span><span class="text-right">{{ section.settings.thursday_opening }}</span>
                  <span class="border-gray-300 border-r text-left">Friday</span><span class="text-right">{{ section.settings.friday_opening }}</span>
                  <span class="border-gray-300 border-r text-left">Saturday</span><span class="text-right">{{ section.settings.saturday_opening }}</span>
                  <span class="border-gray-300 border-r text-left">Sunday</span><span class="text-right">{{ section.settings.sunday_opening }}</span>
              </div> 
              {% endif %}
          </div>
        </div>

        <!-- Contact form --> 
        <div class="border-solid lg:border-l-2  bg-white lg:border-t-0 order-first lg:order-last">          
          <div class="contact">
            <div class="px-6 sm:px-10 xl:px-12 pt-10">
              <h3 class="text-lg font-medium text-gray-900 hidden">Send us a message</h3>
           
            {% include 'ob-include-set-current-country' %}	
          
            {% assign contact_form_id = '' %}
            {% for block in section.blocks %}
              {% if block.type == 'contact-form' %}
                {% include 'ob-include-country-ok-to-proceed', thingObj:block %}
                {% if country_ok_to_proceed == 'yes' %}
                  {% assign contact_form_id = block.settings.form_id %}
                  {% assign gorgias_form_id = block.settings.gorgias_form_id  %}
                {% endif %}
              {% endif %}
            {% endfor %}
            {%  if gorgias_form_id != blank %}  
            <div data-gorgias-contact-form-uid="{{ gorgias_form_id }}"></div>
            <script defer src="https://contact.gorgias.help/api/contact-forms/loader.js?v=2" data-gorgias-loader-contact-form></script>
            {% else %}
            <div class="globo-formbuilder" data-id="{{ contact_form_id }}"></div>
            </div>
            {% endif %}
          </div>          
          
          

          <div class="flex justify-center relative my-8">
          	<hr class="absolute h-1px border-gray-200 my-0 top-1/2 transform translate-y-1/2 w-full">
            <span class="text-black inline-block px-1 relative z-100 bg-gray-50">Or</span>
          </div>
          <div class="px-6 sm:px-10 xl:px-12 pb-10 text-sm" style="background: rgba(255,255,255,0.75);">
            {% assign contact_count = 0 %}
            {% if section.settings.phone_number != blank %}
            	{% assign contact_count = contact_count | plus: 1 %}
            {% endif %}
            {% if section.settings.email != blank %}
            	{% assign contact_count = contact_count | plus: 1 %}
            {% endif %}            
            <div class="grid md:grid-cols-{{ contact_count }} gap-y-4">
              {% if section.settings.phone_number != blank %}
              <div class="flex justify-center">
                <span class="sr-only">Phone number</span>
                <div class="grid text-gray-600">
                  <svg class="flex-shrink-0 w-6 h-6 text-magenta-500 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <span class="pt-2">Tel: {{ section.settings.phone_number }}</span>
                </div>
              </div>
              {% endif %}
              {% if section.settings.email != blank %}
              <div class="flex justify-center">
                <span class="sr-only">Email</span>
                <div class="grid text-gray-600">
                  <!-- Heroicon name: outline/mail -->
                  <svg class="flex-shrink-0 w-6 h-6 text-magenta-500 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <a class="pt-2" href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
                </div>                
              </div> 
              {% endif %}
            </div>
            <dl class="hidden">
              <dt><span class="sr-only">Phone number</span></dt>
              <dd class="flex text-gray-600">
                <!-- Heroicon name: outline/phone -->
                <svg class="flex-shrink-0 w-6 h-6 text-magenta-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="ml-3 text-xs sm:text-sm">0191 605 3276</span>
              </dd>
              <dt><span class="sr-only">Email</span></dt>
              <dd class="flex text-gray-600 pt-2">
                <!-- Heroicon name: outline/mail -->
                <svg class="flex-shrink-0 w-6 h-6 text-magenta-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span href="mailto:lookafter@myoddballs.com" class="ml-3 text-xs sm:text-sm">lookafter@myoddballs.com</span>
              </dd>
            </dl>              
            <ul role="list" class="flex justify-evenly mt-8">
              <li>
                <a class="text-gray-500 hover:text-magenta-500 fill-current" href="https://www.facebook.com/myoddballs" target="_blank">
                  <span class="sr-only">Facebook</span>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" class="h-6 w-6">
                    <path d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z"/>
                  </svg>
                </a>
              </li>
              <li>
                <a class="text-gray-500 hover:text-magenta-500 fill-current" href="https://www.instagram.com/myoddballs" target="_blank">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="h-6 w-6">
                      <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"/>
                  </svg>
                </a>
              </li>
              <li>
                <a class="text-gray-500 hover:text-magenta-500 fill-current" href="https://www.twitter.com/myoddballs" target="_blank">
                  <span class="sr-only">Twitter</span>
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" aria-hidden="true">
                    <path d="M7.548 22.501c9.056 0 14.01-7.503 14.01-14.01 0-.213 0-.425-.015-.636A10.02 10.02 0 0024 5.305a9.828 9.828 0 01-2.828.776 4.94 4.94 0 002.165-2.724 9.867 9.867 0 01-3.127 1.195 4.929 4.929 0 00-8.391 4.491A13.98 13.98 0 011.67 3.9a4.928 4.928 0 001.525 6.573A4.887 4.887 0 01.96 9.855v.063a4.926 4.926 0 003.95 4.827 4.917 4.917 0 01-2.223.084 4.93 4.93 0 004.6 3.42A9.88 9.88 0 010 20.289a13.941 13.941 0 007.548 2.209" fill="currentColor" />
                  </svg>
                </a>
              </li>
            </ul>
          </div>          
        </div>
      </div>
    </div>
  </div>
</div>
                    </div>

