			"label": "Monday"
		},		{
			"type": "text",
			"id": "tuesday_opening",
			"label": "Tuesday"
		},
		{
			"type": "text",
			"id": "wednesday_opening",
			"label": "Wednesday"
		},
		{
			"type": "text",
			"id": "thursday_opening",
			"label": "Thursday"
		},
		{
			"type": "text",
			"id": "friday_opening",
			"label": "Friday"
		},
		{
			"type": "text",
			"id": "saturday_opening",
			"label": "Saturday"
		},
		{
			"type": "text",
			"id": "sunday_opening",
			"label": "Sunday"
		},
		{
			"type": "header",
			"content": "Contact Details"
		},
		{
			"type": "text",
			"id": "phone_number",
			"label": "Phone number"
		},	
		{
			"type": "text",
			"id": "email",
			"label": "Email"
		}
	],
	"blocks": [
      {
        "type": "contact-form",
        "name": "Contact Form",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Block Identifier"
          },
          {
            "type": "html",
            "id": "country_iso",
            "label": "Only display if current iso is (* for all)",
            "info": "Comma seperated",
            "default":"*"
          },           
          {
            "id": "form_id",
            "type": "text",
            "label": "Globo Form ID"
          },
          {
            "id": "gorgias_form_id",
            "type": "text",
            "label": "Gorgias Form ID"
          }
        ]
