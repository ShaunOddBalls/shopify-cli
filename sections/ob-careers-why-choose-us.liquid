{% assign section_settings = section.settings %}
<div class="careers-wrapper mx-auto text-gray-900 font-normal">
<div class="px-[12px] md:px-[36px] xl:px-3 mt-[50px] lg:mt-[70px]">
  <div class="text-center mb-12">
    <h2 class="font-bold mx-auto text-[35px] leading-[44px] md:text-[46px] md:leading-[52px] lg:text-heading-1 text-gray-900 mb-5 md:mb-[30px] max-w-[725px]">{{ section_settings.heading }}</h2>
    <p class="text-quote md:text-lead-lg text-gray-600 mx-auto max-w-[976px]">{{ section_settings.subheading }}</p>
  </div>
  <div class="lg:flex lg:gap-5 xl:gap-[30px]">
    {% for block in section.blocks %}
      <div class="lg:w-1/3 rounded-2xl p-[30px] md:py-[53px] md:px-[48px] relative mb-5 flex flex-col justify-between transition-all duration-300 overflow-hidden border-2 border-solid shadow-lg hover:translate-y-[-3px]" style="background-color: {{ block.settings.bgColor }}; color: {{ block.settings.TextColor }};">
        <div class="relative z-10">
          {% if block.settings.icon %}
            <div class="icon-wrap h-full w-full object-cover mb-[30px] max-w-[80px] max-h-[80px]">{{ block.settings.icon }}</div>
          {% endif %}
          <h2 class="font-bold text-[28px] mb-[30px]">{{ block.settings.title }}</h2>
          <p class="text-excerpt text-gray-600 mb-[22px]">{{ block.settings.desc }}</p>
        </div>
        {% if block.settings.icon %}
          <div class="icon-wrap invert absolute bottom-0 right-0 z-0 h-full w-full object-cover max-w-[140px] max-h-[140px] translate-[25px]">{{ block.settings.icon }}</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
</div>
{% schema %}
  {
    "name": "Why Choose Us",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }
    ],
  "blocks": [
    {
      "type" : "block",
      "name": "Block",
       "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "Icon SVG"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Job Title"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Job Description"
        },
        {
          "type": "color",
          "id": "bgColor",
          "label": "Section Background"
        },
        {
          "type": "color",
          "id": "TextColor",
          "label": "Text Color"
        }
      ] 
    }
  ]
}
{% endschema %}