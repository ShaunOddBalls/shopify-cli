{% schema %}
  {
    "name": "Vodafone-25-matters",
    "settings": [{
      "type": "text",
      "id": "heading",
      "label": "Heading Text"
    }],
    "blocks":[
      {
        "type":"a",
        "name": "product block",
        "settings":[
          {
            "type":"text",
            "id": "title",
            "label": "Title"
          },
          {
            "type":"text",
            "id": "body",
            "label": "Body"
          },
          {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        }
        ]
      }
    ],
    "presets": [{"name":"Vodafone-25-matters"}]
  }
{% endschema %}
<div class="w-full text-center font-bold md:text-xl py-4">{{ section.settings.heading }}</div>

<div class="flex justify-center pb-4">

  <div class="grid md:grid-cols-3 gap-4 max-w-4xl w-full ">
    {% for block in section.blocks %}
          
        <div class="w-full flex flex-col justify-center items-center px-4 md:px-12">
                <img
                class="max-sm:max-w-[150px] mb-2"
                src="{{ block.settings.image | image_url: width: 500 }}"
              >
          <div class="font-bold text-center">{{ block.settings.title }}</div>
          <div class="text-center">{{ block.settings.body }}</div>
        </div>
    {% endfor %}

  </div>
</div>
