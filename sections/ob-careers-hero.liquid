<div class="hero relative px-[12px] md:px-[36px] xl:px-3 py-28 lg:pb-48 mb-7" style="background:url({{ section.settings.image | img_url: 'master' }});background-size:cover">
    <div class="absolute top-0 left-0 w-full h-full" style="background:{{ section.settings.bgOverlay }};opacity: {{ section.settings.overlayOpacity }}%"></div>
    <div class="relative z-10 text-center mx-auto max-w-[1340px] hero-text" style="color:{{ section.settings.textColor }}">
        <h2 class="font-bold mx-auto text-[35px] leading-[44px] md:text-[46px] md:leading-[52px] lg:text-heading-1 mb-5 md:mb-[30px] max-w-[725px]">{{ section.settings.heading }}</h2>
        <p class="text-quote md:text-lead-lg mx-auto max-w-[976px]">{{ section.settings.subheading }}</p>
    </div>
    <div class="bg-white wave-clip-path w-full h-2.5 absolute left-0 bottom-0"></div>
</div>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "color",
        "id": "textColor",
        "label": "Text Color",
      "default": "#fff"
      },
      {
        "type": "color",
        "id": "bgOverlay",
        "label": "Background Overlay Color",
      "default": "#000"
      },
      {
      "type": "range",
      "id": "overlayOpacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 80
    }
  ]
  }
{% endschema %}

