{% schema %}
  {
    "name": "Christmas Waiting Header",
    "presets": [
      {
        "name" : "Christmas Waiting Header"
      }
    ],
    "settings": [
      {
        "type":"image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type":"text",
        "label": "Title",
        "id": "title"
      },
      {
        "type":"text",
        "label": "Text",
        "id": "text"
      },
      {
        "type":"text",
        "label": "Arrow 1",
        "id": "arrow_1"
      },
      {
        "type":"collection",
        "label": "Arrow 1 collection",
        "id": "arrow_1_collection"
      },
      {
        "type":"page",
        "label": "Arrow 1 page",
        "id": "arrow_1_page"
      },
      {
        "type":"text",
        "label": "Arrow 2",
        "id": "arrow_2"
      },
      {
        "type":"collection",
        "label": "Arrow 2 collection",
        "id": "arrow_2_collection"
      },
      {
        "type":"page",
        "label": "Arrow 2 page",
        "id": "arrow_2_page"
      },
      {
        "type":"text",
        "label": "Arrow 3",
        "id": "arrow_3"
      },
      {
        "type":"collection",
        "label": "Arrow 3 collection",
        "id": "arrow_3_collection"
      },
      {
        "type":"page",
        "label": "Arrow 3 page",
        "id": "arrow_3_page"
      },
      {
        "type":"text",
        "label": "Arrow 4",
        "id": "arrow_4"
      },
      {
        "type":"collection",
        "label": "Arrow 4 collection",
        "id": "arrow_4_collection"
      },
      {
        "type":"page",
        "label": "Arrow 4 page",
        "id": "arrow_4_page"
      },
    ]
  }
{% endschema %}
<div class="flex justify-center christmas-waiting-header">
  
  <div class="md:flex max-w-7xl">
    <div class="max-md:w-full md:max-w-3xl">
      {{ section.settings.image | image_url: width: "1200px", height: "800px" | image_tag }}
    </div>
    <div class="flex flex-col justify-center px-4 md:pr-0 md:pl-4 gap-2 pt-4">
      <div class="text-xl md:text-3xl">
        {{ section.settings.title }}
      </div>
      <div class="text-md md:text-xl">
        {{ section.settings.text }}
      </div>
      {% if section.settings.arrow_1 != "" %}
        <a href ="{% if section.settings.arrow_1_collection != blank %}/collections/{{ section.settings.arrow_1_collection}}{% else %}{{ section.settings.arrow_1_page }}{% endif %}">
        <div class="flex items-center" > 
          <div>{{ section.settings.arrow_1 }}</div>
          <svg fill="#000000" width="30px" height="30px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"></path></g></svg>
        </div>
        </a>
      {% endif %}
      {% if section.settings.arrow_2 != "" %}
        <a href ="{% if section.settings.arrow_2_collection != blank %}/collections/{{ section.settings.arrow_2_collection}}{% else %}{{ section.settings.arrow_2_page }}{% endif %}">
        <div class="flex items-center" > 
          <div>{{ section.settings.arrow_2 }}</div>
          <svg fill="#000000" width="30px" height="30px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"></path></g></svg>
        </div>
        </a>
      {% endif %}
      {% if section.settings.arrow_3 != "" %}
        <a href ="{% if section.settings.arrow_3_collection != blank %}/collections/{{ section.settings.arrow_3_collection}}{% else %}{{ section.settings.arrow_3_page }}{% endif %}">
        <div class="flex items-center" > 
          <div>{{ section.settings.arrow_3 }}</div>
          <svg fill="#000000" width="30px" height="30px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"></path></g></svg>
        </div>
        </a>
      {% endif %}
      {% if section.settings.arrow_4 != "" %}
        <a href ="{% if section.settings.arrow_4_collection != blank %}/collections/{{ section.settings.arrow_4_collection}}{% else %}{{ section.settings.arrow_4_page }}{% endif %}">
        <div class="flex items-center" > 
          <div>{{ section.settings.arrow_4 }}</div>
          <svg fill="#000000" width="30px" height="30px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"></path></g></svg>
        </div>
        </a>
      {% endif %}
    </div>
  </div>
</div>
<style>
  .christmas-waiting-header img{
    height:100%
  }
</style>