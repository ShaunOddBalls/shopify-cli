{% schema %}
  {
    "name": "Vodafone-25-prods",
    "settings": [{
      "type": "text",
      "id": "heading",
      "label": "Heading Text"
    }],
    "blocks":[
      {
        "type":"a",
        "name": "product block",
        "settings":[
          {
            "type":"product",
            "id": "product",
            "label": "Product"
          },
          {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        }
        ]
      }
    ],
    "presets": [{"name":"Vodafone-25-prods"}]
  }
{% endschema %}
<div class="w-full text-center font-bold md:text-xl ">{{ section.settings.heading }}</div>
<div class="flex justify-center pt-4">

  <div class="grid grid-cols-2 md:grid-cols-3 gap-4 max-w-4xl max-md:px-4">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
      {% unless forloop.last %}
        <a href="https://www.myoddballs.com/products/{{ block.settings.product }}" class="block">
          
        <div class="w-full flex flex-col justify-center items-center">
                <img
                style="background:#efefef"
                class=""
                src="{{ block.settings.image | image_url: width: 500 }}"
              >
          {% assign title = product.title | split: "-" %}
          <div class="font-bold">{{ title[0] }}</div>
          <div>{{ title[1] }}</div>
    
          <div class="flex"><div class="mr-2" style="color:#fa9835">{{ 205 | money_with_currency}}</div><del class="text-gray-400">{{ product.compare_at_price | money_with_currency }}</del></div>
          <div style="color:#fff; background:#fa9835" class="px-4 py-2 capitalise">Shop Now</div>
        </div>
        </a>
        {% else %}
        <div class="max-md:col-span-2 flex justify-center">
           <a href="https://www.myoddballs.com/products/{{ block.settings.product }}" class="block max-md:w-1/2">
          
        <div class="w-full flex flex-col justify-center items-center">
                <img
                style="background:#efefef"
                class=""
                src="{{ block.settings.image | image_url: width: 500 }}"
              >
          {% assign title = product.title | split: "-" %}
          <div class="font-bold">{{ title[0] }}</div>
          <div>{{ title[1] }}</div>
               <div class="flex"><div class="mr-2" style="color:#fa9835">{{ 205 | money_with_currency}}</div><del class="text-gray-400">{{ product.compare_at_price | money_with_currency }}</del></div>
          <div style="color:#fff; background:#fa9835" class="px-4 py-2 capitalise">Shop Now</div>
        </div>
        </a>
        </div>
      {% endunless %}
      {% endif %}
    {% endfor %}

  </div>
</div>
