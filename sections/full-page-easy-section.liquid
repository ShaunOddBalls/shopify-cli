      </div>
      <div class="w-full grid grid-cols-1  gap-2">
        <div
          id="bundle-cta"
          class="text-nowrap bg-magenta text-white w-full py-5 rounded-full flex justify-center font-bold uppercase text-xs disabled opacity-50"
        >
          Add Bundle To Cart
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Render remaining blocks (like @app) -->
<div id="easy-section" class="relative">
  {% for block in section.blocks %}
    {% unless block.type == 'title' or block.type == 'paragraph' %}
      {% render block %}
    {% endunless %}
  {% endfor %}
</div>
