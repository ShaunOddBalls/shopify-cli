{% schema %}
{
  "name": "New Easy bundle page",
  "settings": [],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "id": "wrapper_classes",
          "type": "text",
          "label": "Wrapper CSS classes",
          "default": "text-2xl font-bold mb-4"
        },
        {
          "id": "inner_wrapper_settings",
          "type": "text",
          "label": "Inner Wrapper CSS classes",
          "default": "text-2xl font-bold mb-4"
        },
        {
          "id": "title_text",
          "type": "text",
          "label": "Text"
        },
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "id": "wrapper_classes",
          "type": "text",
          "label": "Wrapper CSS classes",
          "default": "text-base text-gray-700"
        },{
          "id": "inner_wrapper_settings",
          "type": "text",
          "label": "Inner Wrapper CSS classes",
          "default": "text-2xl font-bold mb-4"
        },
        {
          "id": "paragraph_text",
          "type": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Easy bundle"
    }
  ]
}
{% endschema %}

<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = {
    theme: {
      extend: {
        fontSize: {
          xxs: ['.55rem', '0.9rem'],
        },
        colors: {
          cyan: {
            DEFAULT: '#009FE2',
            50: '#C8EFFF',
            100: '#AFE7FF',
            200: '#7CD8FF',
            300: '#49C9FF',
            400: '#16BAFF',
            500: '#009FE2',
            600: '#007BAF',
            700: '#00577C',
            800: '#003349',
            900: '#000F16',
          },
          magenta: {
            DEFAULT: '#F00F83',
            50: '#FEE7F3',
            100: '#FCCFE6',
            200: '#F99FCD',
            300: '#F66FB5',
            400: '#F33F9C',
            500: '#F00F83',
            600: '#C00C69',
            700: '#90094F',
            800: '#600634',
            900: '#30031A',
          },
        },
      },
    },
  };
</script>

<!-- Title and Paragraph blocks rendered at the top -->
<div class="md:flex justify-center items-center bg-[#ff9100]">
  {% for block in section.blocks %}
    {% if block.type == 'title' %}   
      <div class="{{ block.settings.wrapper_classes }}">
        <h2 class="{{ block.settings.inner_wrapper_settings }}">{{ block.settings.title_text }}</h2>
      </div>
    {% elsif block.type == "paragraph" %}
       <div class="{{ block.settings.wrapper_classes }}">
            <p class="{{ block.settings.inner_wrapper_settings }}">{{ block.settings.paragraph_text }}</p>
      </div>
    {% endif %}
  {% endfor %}
</div>

