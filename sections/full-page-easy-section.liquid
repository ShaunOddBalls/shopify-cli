  id="summer-bundle-container"
  class="min-h-screen hidden md:min-h-[582px] w-full p-4 md:border-b md:p-6 max-w-7xl summer-bundle-container mx-auto md:grid md:grid-cols-12 gap-4 md:border-b"
>
