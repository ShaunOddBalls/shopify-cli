{% schema %}
  {
    "name": "Summer Shop Prod Banner",
    "settings": [
      {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },{
      
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },{
          "type": "collection",
          "id": "page",
          "label": "Collection"
        },
      {
          "type": "text",
          "id": "title",
          "label": "Title",
        },
        {
          "type": "text",
          "id": "sub_title",
          "label": "Sub Title"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        }
    ],
  "presets": [
    {
      "name": "Summer Shop Prod Banner",
    }
  ]
  }
{% endschema %}
<div class="hidden md:block summer-shop-prod-banner relative">
  {{ section.settings.image | media_tag: image_size: '1000x' }}
  <div class="grid grid-cols-2 absolute w-full top-0 z-10 h-full">
    <div class="px-12 w-full h-full flex flex-col items-center justify-center gap-4">
      <div class="text-7xl text-center text-white">{{ section.settings.title }}</div>
      <div class="text-3xl text-white text-center ">{{ section.settings.sub_title }}</div>
      <a href="/collections/{{ section.settings.page }}" class="block bg-white text-center px-2 py-1 text-xl rounded-sm">{{ section.settings.button_text }}</a>
    </div>
  </div>
</div>
<div class="md:hidden">
    {{ section.settings.image | media_tag: image_size: '1000x' }}
  <div class="absolute w-full top-0 px-4 z-10 relative">
    <div>
      <div class="text-xl text-white text-center">{{ section.settings.title }}</div>
      <div class="text-md text-white text-center">{{ section.settings.sub_title }}</div>
      <a href="/collections/{{ section.settings.page }}" class="block bg-white text-center px-2 py-1">{{ section.settings.button_text }}</a>
    </div>
  </div>
</div>
<style>
  .summer-shop-prod-banner img{
    width:100%;
  }
</style>