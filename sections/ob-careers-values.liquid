{% assign section_settings = section.settings %}
{% assign blocks = section.blocks %}
<div class="careers-wrapper mx-auto text-gray-900 font-normal">
<div class="px-[12px] md:px-[36px] xl:px-3 py-[70px]">
    <div class="text-center relative mb-[50px] md:mb-[70px]">
      <h2 class="font-bold mx-auto text-[35px] leading-[44px] md:text-[46px] md:leading-[52px] lg:text-heading-1 text-gray-900 mb-5 md:mb-[30px] max-w-[725px]">{{ section_settings.heading }}</h2>
      <p class="text-quote md:text-lead-lg text-gray-600 mx-auto md:max-w-[50ch]">{{ section_settings.subheading }}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-10 items-center">
          {% for block in blocks %}
          {%- comment %}<locksmith:22ce>{% endcomment -%}
            {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: block, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
          {%- comment %}</locksmith:22ce>{% endcomment -%}
          <div class="lg:col-span-6 h-full">
              <div class="feature-box flex p-8 lg:p-12 h-full border-2 border-solid  shadow-xl transition-all duration-300 hover:translate-y-[-3px]" style="background-color: {{ block.settings.bgColor }};color: {{ block.settings.textColor }};">
                  {% if block.settings.icon %}
                  <div class="icon flex flex-none justify-center items-center bg-white border-2 border-solid  text-xl w-[70px] h-[70px] mr-6">
                    <div class="icon-wrap w-10 h-10 object-cover">{{ block.settings.icon }}</div>
                  </div>
                  {% endif %}
                  <div class="feature-content">
                      <h3 class="font-bold text-[18px] md:text-heading-5 mb-2">{{ block.settings.title }}</h3>
                      <p class="text-base text-gray-700">{{ block.settings.text }}</p>
                  </div>
              </div>
          </div>
          {% endfor %}
      </div>
  </div>
</div>
</div>
{% schema %}
  {
    "name": "Values",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }
    ],
  "blocks": [
    {
      "type" : "block",
      "name": "Block",
       "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "Icon SVG"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "bgColor",
          "label": "Background Color"
        },
        {
          "type": "color",
          "id": "textColor",
          "label": "Text Color"
        }
      ] 
    }
  ]
}
{% endschema %}