			"default": "absolute object-cover z-50"
  		},
  		{
  			"type": "image_picker",
  			"id": "background_image_mobile",
  			"label": "Background Image Mobile"
  		},
  		{
  			"type": "image_picker",
  			"id": "background_image_desktop",
  			"label": "Background Image Desktop"
  		},
  		{
  			"type": "header",
  			"content": "Content"
  		},
  		{
  			"type": "text",
  			"id": "q_side_wrapper_classes",
  			"label": "Wrapper Classes",
			"default": "z-100 relative"
  		},
  		{
  			"type": "text",
  			"id": "questions_wrapper_classes",
  			"label": "Questions Wrapper Classes",
			"default": "flex flex-col px-5 md:px-10 gap-y-4"
  		},
  		{
  			"type": "text",
  			"id": "title",
  			"label": "Title"
  		},
  		{
  			"type": "text",
  			"id": "title_classes",
