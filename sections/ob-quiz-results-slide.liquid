			"default": "text-white text-4xl text-center"
  		},
  		{
  			"type": "text",
  			"id": "subtitle",
  			"label": "Subtitle"
  		},
  		{
  			"type": "text",
  			"id": "subtitle_classes",
  			"label": "Subtitle Classes",
			"default": "text-white text-2xl text-center"
  		},
  		{
  			"type": "text",
  			"id": "image_wrapper_classes",
  			"label": "Image Wrapper Classes"
  		},
  		{
  			"type": "text",
  			"id": "image_classes",
  			"label": "Image Classes"
  		},
  		{
  			"type": "image_picker",
  			"id": "image_link",
  			"label": "Image Link"
  		}
  	]

