{% assign words = article.content | strip_html | strip_newlines | split: ' ' | size %}
{% assign words_per_minute = 200 %}
{% assign reading_time = words | divided_by: words_per_minute %}
{% if words > 0 and reading_time < 1 %}
  {% assign reading_time = 1 %}
{% endif %}
{% assign matched_block = null %}
<div>

    {% for block in section.blocks %}
      {% if article.handle == block.settings.blog_handle.handle or block.settings.text_handle == article.handle %}
        {% assign matched_block = block %}
      {% endif %}
    {% endfor %}

    {% if matched_block %}
    {% assign desktop_image = matched_block.settings.desktop_image %}
    {% assign mobile_image = matched_block.settings.mobile_image %}
    {% assign text_color_desktop = matched_block.settings.text-color-desktop %}
    {% assign text_color_mobile = matched_block.settings.text-color-mobile %}
    {% assign read_time_override = matched_block.settings.read_time %}
  {% else %}
    {% assign desktop_image = section.settings.desktop_image %}
    {% assign mobile_image = section.settings.mobile_image %}
    {% assign text_color_desktop = section.settings.text-color-desktop %}
    {% assign text_color_mobile = section.settings.text-color-mobile %}
    {% assign read_time_override = section.settings.read_time %}
  {% endif %}

 
        <div class="relative w-full md:h-[400px] overflow-hidden">
          
          <!-- Desktop Background image -->
          {% if desktop_image != blank %}
            <img
              src="{{ desktop_image | image_url: width: 2000 }}"
              alt="Desktop Hero"
              class="absolute inset-0 w-full h-full object-cover hidden md:block"
            />
          {% else %}
            <img
                src="https://placehold.co/2000x800?text=Desktop+Image"
                alt="Desktop Hero"
                class=" absolute inset-0 w-full h-full object-cover hidden md:block"
            />
          {% endif %}


          <!-- Mobile Background image -->
          {% if mobile_image != blank %}
            <img
              src="{{ mobile_image | image_url: width: 1000 }}"
              alt="Mobile Hero"
              class="inset-0 w-full h-auto md:hidden"
            />
        {% else %}
            <img
                src="https://placehold.co/800x400?text=Mobile+Image"
                alt="Mobile Hero"
                class="inset-0 w-full h-auto md:hidden"
            />
          {% endif %}

          <!-- Overlay -->
          <div class="absolute inset-0 bg-black bg-opacity-20"></div>

          <!-- Desktop Content -->
          <div class="relative z-10 flex-col items-start justify-end h-full max-w-7xl mx-auto hidden md:flex px-4 py-8">
            <h1 style="color: {{ text_color_desktop }}" class="text-black text-xl font-semibold mb-4 leading-tight">
              {{ article.title }}
            </h1>
          </div>
        </div>

        <!-- Mobile Content -->
        <div class="p-4 max-w-7xl mx-auto border-solid border-b">
          <h1 style="color: {{ text_color_mobile }}" class="text-lg font-semibold mb-4 leading-tight md:hidden">
            {{ article.title }}
          </h1>
            <div class="flex justify-between items-center text-xs text-gray-600 md:py-4 md:max-w-3xl">
                <div>{%  if article.published_at %}{{ article.published_at | date: '%B %d, %Y' }}{% else %}{{ article.created_at | date: '%B %d, %Y' }}{% endif %}</div>
                <div class="text-right md:text-left">{%  if read_time_override != blank%}{{ read_time_override }}{% else %}{{ reading_time }} min read{% endif %}</div>
                <div class="md-hidden md:block"></div>
            </div>
        </div>

</div>
 
