<div class="w-full flex scrolling-container" style="background-color: {{ section.settings.background_color }};color: {{ section.settings.text_color }};">
  <div class="content" style="width:200vw;">
    {% for i in (0..9) %}
      <div class="flex items-center">
         <div class="whitespace-nowrap">   {{ section.settings.text }}</div>
        <div class="rounded-full bg-white w-3 h-3 mx-4">
        </div>
      </div>
    {% endfor %}
    {% for i in (0..9) %}
      <div class="flex items-center">
         <div class="whitespace-nowrap">   {{ section.settings.text }}</div>
        <div class="rounded-full bg-white w-3 h-3 mx-4">
        </div>
      </div>
    {% endfor %}
  </div>
</div>


<style>

.scrolling-container {
  width: 100%;
  overflow: hidden;
}

.content {
  display: flex;
  animation: scroll 15s linear infinite;
}

.item {
  display: inline-block;
  margin-right: 20px; 
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

</style>

{% schema %}
  {
    "name": "Rotating banner",
    "settings": [
      {
        "id": "text",
        "type": "text",
        "label": "Title Text"			
      },
       {
      "type": "color",
          "id": "background_color",
          "label": "Banner Background Color",
          "default": "#fff"
        },
      {
      "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#fff"
        }
    ],
    "presets": [
      {
        "name": "scrolling-banner"
      }
    ],
  }
{% endschema %}