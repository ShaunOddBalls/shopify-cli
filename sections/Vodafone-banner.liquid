  .banner-desktop-svg {
    display: block;
  }

  .banner-mobile-img,
  .banner-mobile-svg {
    display: none;
  }
} */
</style>


{% schema %}
{
  "name": "Vodafone 25 Banner",
  "presets":[{"name":"vodafone 25 banner"}],
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_svg",
      "label": "Desktop SVG (inline)"
    },
    {
      "type": "image_picker",
      "id": "mobile_svg",
      "label": "Mobile SVG (inline)"
    }
  ]
}
{% endschema %}
