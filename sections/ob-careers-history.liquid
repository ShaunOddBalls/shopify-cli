<div class="careers-wrapper mx-auto text-gray-900 font-normal">
<div class="px-[12px] md:px-[36px] xl:px-3 mt-[50px]">
    <div class="text-center mb-12">
        <h2 class="font-bold mx-auto text-[35px] leading-[44px] md:text-[46px] md:leading-[52px] lg:text-heading-1 text-gray-900 mb-5 md:mb-[30px] max-w-[725px]">{{ section.settings.heading }}</h2>
        <p class="text-quote md:text-lead-lg text-gray-600 mx-auto max-w-[976px]">{{ section.settings.subheading }}</p>
    </div>
    <div class="lg:gap-[30px] lg:flex border-2 border-solid  box-shadow shadow-xl mx-auto max-w-7xl" style="background-color:{{ section.settings.bgColor }}">
        <div class="p-5 pb-20 md:p-[60px] lg:w-1/2">
            <h2 class="font-bold text-[28px] mb-[30px]">{{ section.settings.title }}</h2>
            <p class="text-excerpt leading-6 mb-[40px]">{{ section.settings.text }}</p>
            <button class="inline-flex">
                <a class="flex items-center z-10 relative transition-all duration-200 group px-[22px] py-[15px] lg:px-[32px] lg:py-[22px] rounded-[50px] bg-white text-gray-900 hover:bg-blue hover:text-white border-2 border-solid  " href="{{ section.settings.button_url }}">
                    <span class="block text-inherit w-full h-full rounded-[50px] text-lg font-bold">{{ section.settings.button_text }}</span>
                    <img alt="arrow right icon" class="ml-[7px] w-4 group-hover:filter-white transition-all duration-200" src="{{ 'ob-icon-arrow-right.svg' | asset_url }}">
                </a>
            </button>
        </div>
        <div class="relative lg:w-1/2 border-t-2 lg:border-t-0 lg:border-l-2 border-solid ">
            <img class="h-full w-full min-h-[300px] object-cover" src="{{ section.settings.image | img_url: 'master' }}">
            {% if  section.settings.checkbox %}
              <svg class="absolute top-0 right-0" xmlns="http://www.w3.org/2000/svg" width="146" height="132" viewBox="0 0 146 132" fill="none">
              <path d="M0 22.8202L36.8202 -14H73V22.8202L36.8202 59V22.8202H0Z" fill="{{ section.settings.patternColor }}"/>
              <path d="M0 95.8202L36.8202 59H73V95.8202L36.8202 132V95.8202H0Z" fill="{{ section.settings.patternColor }}"/>
              <path d="M73 22.8202L67 -20.5L146 -14L164.5 63.5L109.82 59V22.8202H73Z" fill="{{ section.settings.patternColor }}"/>
              <path d="M73 95.8202L109.82 59H146V95.8202L109.82 132V95.8202H73Z" fill="{{ section.settings.patternColor }}"/>
              </svg>
            {% endif %}
            {% if  section.settings.video_url != blank %}
            <button class="bg-white hover:bg-blue border-2 border-solid border-black box-shadow focus:box-shadow-none focus:outline-none grid place-items-center absolute play-video group w-20 h-20 lg:w-28 lg:h-28 xl:w-32 xl:h-32 top-0 lg:top-1/2 left-1/2 -translate-half lg:left-0 transition-all duration-200" data-mfp-src="{{ section.settings.video_url }}">
                <img alt="play button" class="group-hover:filter-white transition-all duration-200" src="{{ 'icon-play.svg' | asset_url }}" width="30">
            </button>
            {% endif %}
        </div>
    </div>
</div>
</div>
{% schema %}
  {
    "name": "History",
    "settings": [
      {
        "type": "color",
        "id": "bgColor",
        "label": "Section Background"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      },
      {
        "type": "url",
        "id": "video_url",
        "label": "Youtube Video URL"
      },
      {
        "type": "checkbox",
        "id": "checkbox",
        "label": "has pattern ?"
      },
      {
        "type": "color",
        "id": "patternColor",
        "label": "Pattern Color"
      }
    ]
  }
{% endschema %}