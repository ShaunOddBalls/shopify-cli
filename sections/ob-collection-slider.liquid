<div class="overflow-hidden wrapper m-auto wrapper--size-full py-10 lg:pt-14 captioned-image">
  <div class="swiper swiper-collections">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide w-full relative" {{ block.shopify_attributes }}>
          <div class="captioned-image__caption">
            <a class="captioned-image__item" href="{{ block.settings.link }}">
              <picture>
                <img class="captioned-image__image" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}" />
              </picture>
              <div class="captioned-image__caption"><p class="typography font-semibold">{{ block.settings.title }}</p></div>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Collection Slider",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Slide Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}