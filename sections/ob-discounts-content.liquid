<div class="px-4 sm:px-6 pt-6 border-b-2 border-solid">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-10 py-5 xs:py-10">
    <div class="pb-5 border-b border-gray-200">
      <h1 class="text-gray-900 text-4xl font-bebas">
        OddBalls Voucher Codes {{ "now" | date: "%B %Y" }} 
      </h1>
      <h3 class="max-w-4xl mt-2 text-base text-gray-500 xs:text-xl">Active Codes and Discounts for {{ "now" | date: "%B" }}</h3>    
    </div>    
	<div class="lg:my-4 my-2 flex flex-col lg:flex-row">
		<div id="codes_column" class="w-full lg:w-2/3 lg:w-2/3 lg:pr-16">
      		{% render 'ob-create-discount-codes', section:section %}
     		{% render 'ob-discounts-about-us' %}
        	{% render 'ob-discounts-how-to-use' %}
      	</div>
  		<div class="w-full flex-shrink-0 lg:w-1/3 mt-5 lg:mt-0 grid rounded-md overflow-hidden border-2 border-solid">
          {% for block in section.blocks %}
              {% if block.type == 'discounts_snippet' %}
                {%- assign snippet_name = block.settings.snippet_name -%}
                {%- include snippet_name -%}
              {% endif %}
          {% endfor %}         
      	</div>
    </div>
  </div>
</div>

  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />

<script src="{{ 'clipboard.min.js' | asset_url }}"></script>
<script src="{{ 'notify.min.js' | asset_url }}"></script>

{% schema %}
  {
    "name": "Discounts Content",
    "settings": [],
	"blocks": [
      {
        "type": "discount_block",
        "name": "Discount Code",
        "settings": [
          {
            "id": "block_active",
            "type": "checkbox",
            "label": "Discount Active?",
			"default": true
          },
          {
            "id": "customers",
            "type": "select",
            "default": "both",
            "options": [
              {
                "value": "both",
                "label": "both"
              },
              {
                "value": "customer",
                "label": "customer"
              },
              {
                "value": "not-customer",
                "label": "not customer"
              } 
            ],
            "label": "Customer (optional)"
          },
          {
            "type": "html",
            "id": "country_iso",
            "label": "Only display if current iso is (* for all)",
            "info": "Comma seperated",
            "default":"*"
          },           
		  {
			"type": "header",
			"content": "Embellishment Bar"
		  },
          {
            "id": "embellishment_bar_active",
            "type": "checkbox",
            "label": "Embellishment Active?",
			"default": false
          },
          {
			"id": "exclusive_embellishment_bar_text",
            "type": "text",
			"label": "Embellishment Bar Text",
			"info": "E.g 'Exclusive Code'"
          },
		  {
			"id": "embellishment_background",
			"type": "image_picker",
			"label": "Embellishment Bar Background"
		  },
          {
			"id": "embellishment_bar_font_colour",
            "type": "text",
			"label": "Embellishment Bar Text Colour",
			"info": "E.g text-white"
          },
		  {
			"type": "header",
			"content": "Coupon Content"
		  },
          {
			"id": "label_text",
            "type": "text",
			"label": "Label Text",
			"info": "E.g 'Exclusive'"
          },
          {
			"id": "label_text_colour",
            "type": "text",
			"label": "Label Text Colour",
			"info": "E.g magenta-500"
          },
          {
			"id": "label_colour",
            "type": "text",
			"label": "Label Colour",
			"info": "E.g #F00F83"
          },
          {
			"id": "discount_title",
            "type": "text",
			"label": "Discount Title",
			"info": "E.g. Extra 10% Off"
          },
          {
			"id": "discount_description",
            "type": "text",
			"label": "Discount Description",
			"info": "E.g. Get an extra 10% off for a limited time"
          },
          {
            "id": "discount_end_active",
            "type": "checkbox",
            "label": "Discount End Date Active?",
			"default": true
          },
          {
			"id": "discount_end_date",
            "type": "text",
			"label": "Discount End Date",
			"info": "E.g. 17 October 2021"
          },
          {
			"id": "discount_code",
            "type": "text",
			"label": "Discount Code",
			"info": "E.g. SAVE10"
          },
          {
			"id": "discount_code_end",
            "type": "text",
			"label": "Discount Code",
			"info": "E.g. E10"
          },
          {
			"id": "discount_link",
            "type": "url",
			"label": "Offer link",
			"info": "Use if a page not a code"
          },
          {
			"id": "discount_link_text",
            "type": "text",
			"label": "Discount link button text",
			"info": "E.g. NO CODE NEEDED"
          },
          {
			"id": "date_added",
            "type": "text",
			"label": "Date Added",
			"info": "E.g. 30 October 2021"
          },
          {
			"id": "discount_terms",
            "type": "text",
			"label": "Discount Terms",
			"info": "E.g. enter the terms of the discount"
          },
          {
			"id": "discount_information",
            "type": "page",
			"label": "Discount Information Page"
          },
          {
			"id": "info_button_text",
            "type": "text",
			"label": "Info Button Text"
          }
		]
	  },
      {
        "type": "discounts_snippet",
        "name": "Discount Page Snippet",
        "settings": [
          {
            "id": "snippet_name",
            "type": "text",
            "label": "Snippet Name",
			"info": "E.g. oddballs-snippet"
          }
		]
	  }
	]
}

{% endschema %}

