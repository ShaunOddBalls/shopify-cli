            {% if localization.language.root_url == "/" %}

{% if template.name == 'product' %}
  {% unless product.vendor == 'OddBalls Subscriptions' %}

        


{% assign product_type = product.type %}

{% for bundle_type in shop.metaobjects.build_a_bundles.values %}
  {% for collection in bundle_type.included_collections.value %}

    
    {%- comment %}<locksmith:f657>{% endcomment -%}
      {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: collection, subject_parent: bundle_type.included_collections, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
    {%- comment %}</locksmith:f657>{% endcomment -%}

    
    {% for product in collection.products %}

      {%- comment %}<locksmith:3f52>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
      {%- comment %}</locksmith:3f52>{% endcomment -%}

      {% if product_type == product.type %}
        {% assign current_bundle = bundle_type %}
        {% endif %}
    {% endfor %}
    
  {% endfor %}
  {% endfor %}
      {% assign total_saving =  current_bundle.tier.value.save_3 | times:100 %}
        <div id="product-header-get-yours-from" class="text-sm text-gray-700 {% if product.price < product.compare_at_price %} hidden {% endif %} {%  if product.tags contains 'style-licenced' or product.tags contains 'style-licenced' or product.tags contains 'socks' or product.tags contains 'seamless' or product.tags contains 'goolies' or product.tags contains 'Seamless Full Briefs' %}hidden{% endif %} {% if product.tags contains 'feature-multi-buy' %}hidden{% endif %}" style="">
            - 
          {{ "ob_product_page.get_yours_from" | t }}
          <span class="js-scroll-and-open"  style="color: #f00f83;font-weight: bold;text-decoration: underline;">{% if product.price < product.compare_at_price %} {{ product.compare_at_price | minus: total_saving | money }} {% else %} {{ product.price | minus: total_saving | money }} {% endif %}</span>
        </div>
  {% endunless %}
{% endif %}
              {% endif %}