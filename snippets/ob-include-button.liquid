{% comment %}
  Usage:
  {% render 'ob-include-button',
    type: section.settings.button_style,
    text: section.settings.button_text,
    link: section.settings.button_link,
    extra_classes: section.settings.extra_classes,
    section_id: section.id,
    is_rounded: section.settings.is_rounded,
    custom_attributes: section.settings.custom_attributes,
    button_id: section.settings.button_id
  %}

  Schema settings for sections:
     {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Custom Button"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "outline",
          "label": "Outline"
        }
      ],
      "default": "primary"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "is_rounded",
      "label": "Use rounded style",
      "default": false
    },
    {
      "type": "text",
      "id": "extra_classes",
      "label": "Extra Classes",
      "info": "Add any additional classes, separated by spaces"
    },
    {
      "type": "text",
      "id": "button_id",
      "label": "Button ID",
      "info": "Add a unique ID to the button"
    },
    {
      "type": "text",
      "id": "custom_attributes",
      "label": "Custom Attributes",
      "info": "Add custom attributes to the button (e.g., data-custom='value')"
    }
{% endcomment %}

{% assign button_class = 'oddballs-button button--size-md' %}

{% case type %}
  {% when 'primary' %}
    {% assign button_class = button_class | append: ' oddballs-button--primary' %}
  {% when 'secondary' %}
    {% assign button_class = button_class | append: ' oddballs-button--secondary' %}
  {% when 'outline' %}
    {% assign button_class = button_class | append: ' oddballs-button--outline' %}
{% endcase %}

{% if is_rounded %}
  {% assign button_class = button_class | append: ' oddballs-button--rounded' %}
{% endif %}

{% if extra_classes %}
  {% assign button_class = button_class | append: ' ' | append: extra_classes %}
{% endif %}

<div class="button-group">
  <a
    class="{{ button_class }}"
    href="{{ link }}"
    {% if button_id %}
      id="{{ button_id }}"
    {% endif %}
    {{ custom_attributes }}
  >
    {{- text -}}
  </a>
</div>
