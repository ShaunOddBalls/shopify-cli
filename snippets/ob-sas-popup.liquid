{% assign prod_type = product.type | downcase | replace: " ", "-" %}
{% assign sas_metaobject = shop.metaobjects.sas_product[prod_type] %}
{% assign sas_product = sas_metaobject.product.value %}
 {% assign sas_subscription_equivalent_price = sas_metaobject.subscription_equivalent.value.price | divided_by: 100 %}
{% assign sas_sock_product = sas_metaobject.sock_subscription.value %}
{% assign sas_sock_sizes = sas_metaobject.sock_size_product.value %}

{% if sas_sock_sizes %}
  {% assign sas_size_sock_product = sas_metaobject.sock_size_product.value %}
{% else %}
  {% assign sas_size_sock_product = sas_metaobject.sock_subscription.value %}
{% endif %}

                  <div class="w-full bg-gray-100 border-b border" >
                  <div class="w-full flex justify-between mx-auto px-6" style="max-width: 500px">
