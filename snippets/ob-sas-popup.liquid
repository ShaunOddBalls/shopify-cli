               {%- form 'product',
                  product,
                  data-product-id: product.id,
                  id: product_form_id,
                  class: "sas-product-form-form px-6",
                  novalidate: 'novalidate',
                  data-type: 'add-to-cart-form'
                -%}
    
                  {% render 'ob-product-form-attributes', product: sasproduct, sas-subscription_equivalent_price: sas_subscription_equivalent_price %}
                  <div class="flex-1">
                    <div class="flex flex-1 flex-col justify-between">
                      <div class="divide-y divide-gray-200">
                        <div class="space-y-6 pt-4">
                          <!-- Variant Options -->
                          <div class="sas-product-variants-wrap">
                            {% render 'ob-product-variants', product: product, form_type: "sas_product" %}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                 {% endform %}
                 
                  <div class="sas-sock-selector px-6">
                    {% render 'ob-product-variants', product: sas_size_sock_product, form_type: "sas_product" %}
                  </div>

                  
