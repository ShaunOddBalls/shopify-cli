{% layout none %}
{% if  product.metafields.custom.hero_banner %}
<div class="relative mb-8 min-h-[250px]">
  <!-- Desktop Image -->
  <img
    loading="lazy"
    class="object-cover h-full w-full hidden sm:block max-h-[500px] min-h-[250px] brightness-75"
    src="{{ product.metafields.custom.hero_banner | img_url: 'master' }}"
    alt="Hero Banner"
  >

  <!-- Mobile Image -->
  <img
    loading="lazy"
    class="object-cover h-full w-full block sm:hidden brightness-75 min-h-[250px]"
    src="{{ product.metafields.custom.hero_banner_mobile | img_url: 'master' }}"
    alt="Hero Banner"
  >
  
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
    <img
      loading="lazy"
      class="w-full h-full md:max-h-[150px] rounded-2xl shadow-2xl"
      src="{{ product.featured_image | img_url: 'master' }}"
      alt="desktop overlay svg"
    >
  </div>
</div>
{% else %}
  <div class="relative p-6">
      <img
      loading="lazy"
      class="mx-auto h-full max-h-[300px]"
      src="{{ product.featured_image | img_url: 'master' }}"
      alt="desktop overlay svg"
    >
  </div>
{% endif %}

<div class="gift-card__image-wrapper">
        {%- if settings.logo != blank -%}
          {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
          {{ settings.logo | image_url: width: 250 | image_tag: class: 'gift-card__image mx-auto', alt: logo_alt }}
        {%- else %}
          <img
            class="gift-card__image mx-auto"
            src="{{ 'gift-card/card.svg' | shopify_asset_url }}"
            alt=""
            height="{{ 570 | divided_by: 1.5 }}"
            width="300"
            loading="eager"
          >
        {%- endif %}
      </div>



<div class="w-full max-w-7xl mx-auto text-center px-6 mt-8">
  <p class="text-base"><span id="name">Great news.</span>! You've been sent an e-gift card from {% if customer.name %}{{ customer.name }}{% else %}*Your Name*{% endif %} to spend at OddBalls worth</p>
  <p class="font-bold text-base my-6 text-2xl"><span id="price">£0.00</span> GBP</p>
  <div class="gift-card__qr-code" data-identifier="{{ gift_card.qr_identifier }}"></div>
  <div class="my-4">
  <p>
    <blockquote class="p-3 quote EN">
      <span id="message" class="italic font-bold text-base">*Your Message Here*</span>
    </blockquote>
  </p>
  </div>

  <p class="text-base ">You can redeem your e-gift card by entering your code at checkout on <span class="text-magenta">OddBalls</span> online store</p>
  <p id="gift-card-code" class="gift-card__number my-6 text-2xl">#### #### #### ####</p>
  <div class="gift-card__qr-code mx-auto my-12 flex justify-center hidden" data-identifier="shopify-giftcard-v1-BEA239GA8B6GHEEA"><canvas width="72" height="72" style="display: none;"></canvas><img alt="QR code — scan to redeem gift card" src="data:image/png;base64," style="display: none;"></div>
  <span class="block mx-auto max-w-md rounded-full py-2 capitalize bg-magenta px-4 text-white font-semibold mb-4 !uppercase">Redeem e-gift card</span>
  <span class="block mx-auto max-w-md !uppercase rounded-full py-2 w-full capitalize  px-4  font-semibold mb-4 rounded-full uppercase text-black semi-bold bg-gray-200 border-0 flex justify-center" target="_blank" rel="noopener" aria-describedby="a11y-new-window-message">
          Visit online store
        </span>
  <p class="gift-card-message text-base">Your e-gift card is valid for 1 years from <span id="date">dd/mm/yyyy</span>.</p>

  
</div>

<hr class="w-full mx-auto max-w-5xl my-8">
<p class="disclaimer__subtext text-xs max-w-7xl mx-auto text-center px-6">This is not Your gift card. Please click view gift card to redeem your e-gift card</p>                     
<p class="disclaimer__subtext text-xs max-w-7xl mx-auto text-center px-6 mb-10">If you have any questions, reply to this email or contact us at <span class="text-magenta"{{ shop.email }}">{{ shop.email }}</span></p>
                      
                            